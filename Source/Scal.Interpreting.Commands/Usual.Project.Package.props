<Project>

  <PropertyGroup                    Label="Usual project Settings">
    <ImplicitUsings                 >disable</ImplicitUsings>
    <Nullable                       >enable</Nullable>
    <GenerateDocumentationFile      >true</GenerateDocumentationFile>
    <PublishDocumentationFile       >true</PublishDocumentationFile>
    <SatelliteResourceLanguages     >en</SatelliteResourceLanguages>
    <ManagePackageVersionsCentrally >true</ManagePackageVersionsCentrally>
  </PropertyGroup>

  <PropertyGroup                    Label="Usual Package Metadata">
    <PackageId                      >$(MSBuildProjectName)</PackageId>
    <PackageVersion                 >$(Version)</PackageVersion>
    <Authors                        >Scal-Human</Authors>
    <AuthorAlias                    >JIC Softwares</AuthorAlias>
    <ProjectUpdate                  >$([System.DateTime]::Now.ToString(`yyyy`))</ProjectUpdate>
    <ProjectLifetime                Condition="'$(ProjectCreation)' == '$(ProjectUpdate)'">$(ProjectUpdate)</ProjectLifetime>
    <ProjectLifetime                Condition="'$(ProjectCreation)' != '$(ProjectUpdate)'">$(ProjectCreation)-$(ProjectUpdate)</ProjectLifetime>
    <Copyright                      >(c) $(ProjectLifetime) $(Authors) - $(AuthorAlias)</Copyright>
    <PackageProjectUrl              >https://github.com/$(Authors)/$(MSBuildProjectName)</PackageProjectUrl>
    <RepositoryUrl                  >https://github.com/$(Authors)/$(MSBuildProjectName).git</RepositoryUrl>
    <RepositoryType                 >git</RepositoryType>
    <PackageReadmeFile              >ReadMe.md</PackageReadmeFile>
    <PackageReleaseNotesFile        >ChangeLog.md</PackageReleaseNotesFile>
  </PropertyGroup>
  
  <PropertyGroup                    Label="Usual Package Settings">
    <PublishRelease                 >true</PublishRelease>
    <PackRelease                    >true</PackRelease>
    <PackAsTool                     >false</PackAsTool>
    <ToolCommandName                ></ToolCommandName>
  </PropertyGroup>
 
  <ItemGroup                        Label="Usual Package Content">
    <Content  Pack="true"           Include="..\..\$(PackageReadmeFile)"      PackagePath="\" />
    <Content  Pack="true"           Include="..\..\Citation.cff"              PackagePath="\" />
    <Content  Pack="true"           Include="..\..\License.txt"               PackagePath="\" />
    <Content  Pack="true"           Include="$(PackageReleaseNotes)"          PackagePath="\" />
    <Content  Pack="true"           Include="$(PackageIcon)"                  PackagePath="\" />
  </ItemGroup>

</Project>
